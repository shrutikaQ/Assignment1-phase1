
{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@types/*": ["src/types/*"],
      "@data/*": ["src/data/*"],
      "@assets/*": ["src/assets/*"],
          "@types": ["src/types/index.ts"],       
      "@styles/*": ["src/styles/*"] ,
        "@pages/*": ["src/pages/*"]  // âœ… must be present
    },
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "jsx": "react-jsx",
    "target": "ES2020",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["src"]
}
